@model CategoryListViewModel

<div class="row">
    <h2>Are you sure you want to delete this?</h2>
</div>
<div class="row">
    
    <form method="post" asp-action="DeleteConfirmed" asp-controller="Category">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input type="text" asp-for="Name" class="form-control" disabled />
        </div>
         <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
            <input type="text" asp-for="Description" class="form-control" disabled/>
        </div>
         <div class="form-group">
            <label asp-for="CategoryId" class="form-label">Parent Category</label>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
           <select asp-for="CategoryId" class="form-control" disabled asp-items="@ViewBag.categoryList">
               <option value="">Select Parent Category</option>
           </select>
        </div>
        <div class="row">
            &nbsp;
        </div>
         <div class="form-group">
            <button type="submit" class="btn btn-danger">Yes</button>
            <a class="btn btn-info" asp-action="Index" asp-controller="Category">No</a>
        </div>
    </form>
</div>